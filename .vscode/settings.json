{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.associations": {
    ".envrc": "shellscript",
    ".env": "shellscript",
    "*.example": "plaintext"
  },
  "files.exclude": {
    "Brewfile.lock.json": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/.mypy_cache": true,
    "**/venv": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--settings-file", "pyproject.toml"],
  "cSpell.words": ["commitizen", "cookiecutter", "PYTHONUNBUFFERED"]
}
